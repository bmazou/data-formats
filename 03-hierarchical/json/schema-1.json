{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "http://example.org/vocabulary/schema-1.json",
    "$defs": {
        "langString": {
            "anyOf": [
                {
                    "type": "object",
                    "required": ["cs"],
                    "properties": {
                        "cs": {
                            "type": "string"
                        }
                    }
                },
                {
                    "type": "object",
                    "required": ["en"],
                    "properties": {
                        "en": {
                            "type": "string"
                        }
                    }
                }
            ]
        },
        "person": {
            "type": "object",
            "required": ["firstName", "lastName"],
            "properties": {
                "firstName": {
                    "$ref": "#/$defs/langString"
                },
                "lastName": {
                    "$ref": "#/$defs/langString"
                }
            }
        },
        "doctor": {
            "type": "object",
            "title": "Doctor",
            "allOf": [
                {
                    "$ref": "#/$defs/person"
                },
                {
                    "properties": {
                        "degree": {
                            "type": "array",
                            "items": {
                                "$ref": "#/$defs/langString"
                            }
                        }
                    },
                    "required": ["degree"]
                }
            ]
        },
        "appointment": {
            "title": "Appointment",
            "type": "object",
            "properties": {
                "reason": {
                    "$ref": "#/$defs/langString"
                },
                "time": {
                    "type": "string",
                    "format": "date-time"
                },
                "doctor": {
                    "$ref": "#/$defs/doctor"
                }
            },
            "required": ["reason", "time", "doctor"]
        },
        "patient": {
            "type": "object",
            "title": "Patient",
            "allOf": [
                {
                    "$ref": "#/$defs/person"
                },
                {
                    "properties": {
                        "nationalIdNumber": {
                            "type": "number"
                        },
                        "appointments": {
                            "type": "array",
                            "items": {
                                "$ref": "#/$defs/appointment"
                            }
                        }
                    },
                    "required": ["nationalIdNumber", "appointments"]
                }
            ]
        }
    },

    "type": "array",
    "title": "Patients",
    "minItems": 1,
    "items": {
        "$ref": "#/$defs/patient"
    }
}