{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "http://example.org/vocabulary/schema-1.json",
    "$defs": {
        "person": {
            "type": "object",
            "properties": {
                "firstName": { "type": "string" },
                "lastName": { "type": "string" }
            },
            "required": ["firstName", "lastName"]
        }
    },

    "type": "array",
    "title": "Patients",
    "items": {
        "title": "Patient",
        "type": "object",
        "allOf": [
            {
                "$ref": "#/$defs/person"
            },
            {
                "properties": {
                    "nationalIdNumber": {
                        "type": "number"
                    },
                    "appointments": {
                        "type": "array",
                        "items": {
                            "title": "Appointment",
                            "type": "object",
                            "properties": {
                                "reason": {
                                    "type": "string"
                                },
                                "time": {
                                    "type": "string",
                                    "format": "date-time"
                                },
                                "doctor": {
                                    "type": "object",
                                    "title": "Doctor",
                                    "allOf": [
                                        {
                                            "$ref": "#/$defs/person"
                                        },
                                        {
                                            "properties": {
                                                "degree": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string"
                                                    }
                                                }
                                            },
                                            "required": [
                                                "degree"
                                            ]
                                        }
                                    ]
                                }
                            },
                            "required": [
                                "reason",
                                "time",
                                "doctor"
                            ]
                        }
                    }
                },
                "required": [
                    "nationalIdNumber",
                    "appointments"
                ]
            }
        ]
    }
}