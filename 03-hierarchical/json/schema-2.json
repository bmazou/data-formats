{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "http://example.org/vocabulary/schema-2.json",
    "$defs": {
        "langString": {
            "anyOf": [
                {
                    "type": "object",
                    "required": ["cs"],
                    "properties": {
                        "cs": {
                            "type": "string"
                        }
                    }
                },
                {
                    "type": "object",
                    "required": ["en"],
                    "properties": {
                        "en": {
                            "type": "string"
                        }
                    }
                }
            ]
        },

        "person": {
            "type": "object",
            "title": "Person"
            "required": ["firstName", "lastName"],
            "properties": {
                "firstName": {
                    "$ref": "#/$defs/langString"
                },
                "lastName": {
                    "$ref": "#/$defs/langString"
                }
            }
        },

        "doctor": {
            "type": "object",
            "title": "Doctor",
            "allOf": [
                {
                    "$ref": "#/$defs/person"
                },
                {
                    "properties": {
                        "degree": {
                            "type": "array",
                            "items": {
                                "$ref": "#/$defs/langString"
                            }
                        }
                    },
                    "required": ["degree"]
                }
            ]
        },
        
        "room": {
            "type": "object",
            "title": "Room",
            "properties": {
                "number": {
                    "type": "number"
                },
                "floor": {
                    "type": "number"
                },
                "doctor": {
                    "$ref": "#/$defs/doctor"
                }
            },
            "required": ["number", "floor"]
        },

        "hospital": {
            "type": "object",
            "title": "Hospital",
            "properties": {
                "name": {
                    "$ref": "#/$defs/langString"
                },
                "address": {
                    "$ref": "#/$defs/langString"
                },
                "rooms": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/room"
                    }
                }
            },
            "required": ["name", "address", "rooms"]
        }
    },

    "type": "array",
    "title": "Hospitals",
    "minItems": 1,
    "items": {
        "$ref": "#/$defs/hospital"
    }
}
